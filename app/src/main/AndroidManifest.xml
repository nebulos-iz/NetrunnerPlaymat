<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="netrunner.netrunnerplaymat" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CorpDeckSelectActivity"
            android:label="@string/title_activity_corp_deck_select"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netrunner.netrunnerplaymat.MainActivity" />
        </activity>
        <activity
            android:name=".RunnerDeckSelectActivity"
            android:label="@string/title_activity_runner_deck_select"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netrunner.netrunnerplaymat.MainActivity" />
        </activity>
        <activity
            android:name=".ImportDeckActivity"
            android:label="@string/title_activity_import_deck"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netrunner.netrunnerplaymat.MainActivity" />
        </activity>
        <activity
            android:name=".OpenSettingsActivity"
            android:label="@string/title_activity_open_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netrunner.netrunnerplaymat.MainActivity" />
        </activity>
        <activity
            android:name=".CorpPlaymatActivity"
            android:label="@string/title_activity_corp_playmat"
            android:parentActivityName=".CorpDeckSelectActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netrunner.netrunnerplaymat.CorpDeckSelectActivity" />
        </activity>
        <activity
            android:name=".RunnerPlaymatActivity"
            android:label="@string/title_activity_runner_playmat" >
        </activity>
    </application>

</manifest>
